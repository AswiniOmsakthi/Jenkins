pipeline {
    agent any  // Defines where the pipeline runs (any available agent)

    stages {
        stage('Build') {
            steps {
                echo 'Building the project...'  // Print message
                echo 'Built'
            }
        }

        stage('Test') {
            steps {
                echo 'Running tests...'  // Print message
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying application...'  // Print message
            }
        }
    }
}
